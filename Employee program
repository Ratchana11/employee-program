class Employee 
{
    int yoj;
    String name;
    String Address; 
    float salary;
}
class Main{
            public static void main(String args[]) 
   {
            Scanner sc = new Scanner(System.in);
            System.out.print("How many employees? ");
            int n = sc.nextInt();
            Employee emp[] = new Employee[n];
            for (int i = 0; i < n; i++) {
            emp[i] = new Employee();
            System.out.println("Enter " + (i + 1) + " Employee data :");
            System.out.print("Enter employee Yearof joining:");
            emp[i].yoj = sc.nextInt();
            System.out.print("Enter employee name :");
            emp[i].name = sc.next();
            System.out.print("Enter employee Address :");
            emp[i].Address = sc.next();
            System.out.print("Enter employee salary :");
            emp[i].salary = sc.nextFloat();
}
 System.out.println("\n Employee Details are :\n");
 for (int i = 0; i < n; i++) {
        System.out.println("Employee id, Name, Designation and Salary :" + emp[0].yoj + " " + emp[i].name + " " + emp[i].Address + " " +emp[i].salary);
  }
 }
}
